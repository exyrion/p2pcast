<!-- Modal for login -->
<div class="modal fade small" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" align="center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Login</h4>
      </div>
      <div class="modal-body">

        <div class="login-form">
          <form role="form" action="/login" method="post">
            <div class="form-group" id="emailForm">
              <input type="text" class="form-control login-field" value="" placeholder="Email" name="email" id="email" required>
              <label class="login-field-icon fui-user" for="login-name"></label>
            </div>

            <div class="form-group">
              <input type="password" class="form-control login-field" value="" placeholder="Password" name="password" id="password" required>
              <label class="login-field-icon fui-lock" for="login-pass"></label>
            </div>
            <div class="row">

              <div class="col-md-7">
                <label align="left" class="checkbox" for="user_remember_me">
                  <span class="icons">
                    <span class="first-icon fui-checkbox-unchecked"></span>
                    <span class="second-icon fui-checkbox-checked"></span>
                  </span>
                    <input id="user_remember_me" style="float: left; margin-right: 10px;" type="checkbox" name="user[remember_me]" value="1" data-toggle="checkbox"/>
                  Remember me
                </label>
              </div>

              <div class="col-md-5" style="padding-top: 5px;">
                <a href="#"><p align="right" id="goToRegister">Register?</p></a>
              </div>
            </div>

            <!-- Alert message if something went wrong with login -->
            <div class="alert alert-danger hidden">
                  <p id="flashLogin"><small><%= req.flash('errors') %></small></p>
            </div>

            <input class="btn btn-embossed btn-primary btn-lg btn-block" value="Sign In" id="login" type="submit" />
        </form>
      </div>
    </div>
    </div>
  </div>
</div>